---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAuthor, getAllAuthors } from '../../data/authors';
import { getCollection } from 'astro:content';

// Enable prerendering for all author pages (faster, better SEO)
export const prerender = true;

export async function getStaticPaths() {
  const authors = getAllAuthors();
  return authors.map(author => ({
    params: { author: author.slug },
    props: { author }
  }));
}

const { author } = Astro.props;

// Get all content written by this author
const allGuides = await getCollection('guides');
const allBlog = await getCollection('blog');
const allBrands = await getCollection('brands');

// Check if this is a reviewer
const isReviewer = author.slug === 'amara-okonkwo';

// For writers, filter by writtenBy field
const authorGuides = !isReviewer ? allGuides.filter(guide =>
  guide.data.writtenBy === author.name
) : [];

const authorBlog = !isReviewer ? allBlog.filter(post =>
  post.data.writtenBy === author.name
) : [];

const authorBrands = !isReviewer ? allBrands.filter(brand =>
  brand.data.writtenBy === author.name
) : [];

const totalArticles = authorGuides.length + authorBlog.length + authorBrands.length;

// For medical reviewer, filter by medicalReviewer field
const reviewerGuides = isReviewer ? allGuides.filter(guide =>
  guide.data.medicalReviewer === author.name
) : [];

const reviewerBlog = isReviewer ? allBlog.filter(post =>
  post.data.medicalReviewer === author.name
) : [];

const reviewerBrands = isReviewer ? allBrands.filter(brand =>
  brand.data.medicalReviewer === author.name
) : [];

const reviewCount = reviewerGuides.length + reviewerBlog.length + reviewerBrands.length;
---

<BaseLayout
  title={`${author.name} - ${author.title} | CompareMensCare`}
  description={`${author.name}, ${author.credentials} - ${author.title}. ${author.bio.substring(0, 155)}...`}
>
  <div class="min-h-screen bg-gradient-to-b from-slate-50 to-white">
    <!-- Author Hero -->
    <div class="bg-gradient-to-r from-brand-primary to-brand-accent text-white py-16">
      <div class="container-custom">
        <div class="flex flex-col md:flex-row items-center gap-8">
          <!-- Author Image/Avatar -->
          <div class="flex-shrink-0">
            {author.image ? (
              <img
                src={author.image}
                alt={author.name}
                class="w-32 h-32 md:w-40 md:h-40 rounded-full border-4 border-white shadow-2xl object-cover"
              />
            ) : (
              <div class="w-32 h-32 md:w-40 md:h-40 rounded-full border-4 border-white shadow-2xl bg-white text-brand-primary flex items-center justify-center text-4xl md:text-5xl font-bold">
                {author.name.split(' ').map(n => n[0]).join('')}
              </div>
            )}
          </div>

          <!-- Author Info -->
          <div class="flex-1 text-center md:text-left">
            <h1 class="text-4xl md:text-5xl font-bold mb-2">{author.name}</h1>
            <p class="text-xl md:text-2xl text-blue-100 mb-3">{author.credentials}</p>
            <p class="text-lg md:text-xl mb-4">{author.title}</p>

            <!-- Stats -->
            <div class="flex flex-wrap gap-4 justify-center md:justify-start text-sm">
              {!isReviewer && (
                <div class="bg-white/20 backdrop-blur-sm rounded-lg px-4 py-2">
                  <span class="font-bold text-2xl block">{totalArticles}</span>
                  <span class="text-blue-100">Articles Written</span>
                </div>
              )}
              {isReviewer && (
                <div class="bg-white/20 backdrop-blur-sm rounded-lg px-4 py-2">
                  <span class="font-bold text-2xl block">{reviewCount}</span>
                  <span class="text-blue-100">Articles Reviewed</span>
                </div>
              )}
              <div class="bg-white/20 backdrop-blur-sm rounded-lg px-4 py-2">
                <span class="font-bold text-2xl block">{author.experience.match(/\d+/)?.[0]}</span>
                <span class="text-blue-100">Years Experience</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="container-custom py-12">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Column -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Biography -->
          <section class="bg-white rounded-lg shadow-sm border border-slate-200 p-6 md:p-8">
            <h2 class="text-2xl font-bold text-slate-900 mb-4">About {author.name.split(' ')[0]}</h2>
            <div class="prose prose-slate max-w-none">
              {author.bio.split('\n\n').map(paragraph => (
                <p class="text-slate-700 mb-4">{paragraph}</p>
              ))}
            </div>
          </section>

          <!-- Recent Articles -->
          {!isReviewer && totalArticles > 0 && (
            <section class="bg-white rounded-lg shadow-sm border border-slate-200 p-6 md:p-8">
              <h2 class="text-2xl font-bold text-slate-900 mb-6">Recent Articles by {author.name.split(' ')[0]}</h2>

              <!-- Guides -->
              {authorGuides.length > 0 && (
                <div class="mb-6">
                  <h3 class="text-lg font-semibold text-slate-900 mb-3">Guides</h3>
                  <div class="space-y-3">
                    {authorGuides.slice(0, 5).map(guide => (
                      <a
                        href={`/guides/${guide.slug}`}
                        class="block p-4 bg-slate-50 hover:bg-slate-100 rounded-lg transition-colors"
                      >
                        <h4 class="font-semibold text-slate-900 mb-1">{guide.data.title}</h4>
                        <p class="text-sm text-slate-600">{guide.data.description}</p>
                      </a>
                    ))}
                  </div>
                </div>
              )}

              <!-- Blog Posts -->
              {authorBlog.length > 0 && (
                <div class="mb-6">
                  <h3 class="text-lg font-semibold text-slate-900 mb-3">Blog Posts</h3>
                  <div class="space-y-3">
                    {authorBlog.slice(0, 5).map(post => (
                      <a
                        href={`/blog/${post.slug}`}
                        class="block p-4 bg-slate-50 hover:bg-slate-100 rounded-lg transition-colors"
                      >
                        <h4 class="font-semibold text-slate-900 mb-1">{post.data.title}</h4>
                        <p class="text-sm text-slate-600">{post.data.description}</p>
                      </a>
                    ))}
                  </div>
                </div>
              )}

              <!-- Brand Reviews -->
              {authorBrands.length > 0 && (
                <div>
                  <h3 class="text-lg font-semibold text-slate-900 mb-3">Brand Reviews</h3>
                  <div class="space-y-3">
                    {authorBrands.slice(0, 5).map(brand => (
                      <a
                        href={`/${brand.slug}`}
                        class="block p-4 bg-slate-50 hover:bg-slate-100 rounded-lg transition-colors"
                      >
                        <h4 class="font-semibold text-slate-900 mb-1">{brand.data.title} Review</h4>
                        <p class="text-sm text-slate-600">{brand.data.description}</p>
                      </a>
                    ))}
                  </div>
                </div>
              )}

              {totalArticles > 5 && (
                <p class="text-sm text-slate-600 mt-4 text-center">
                  Showing 5 of {totalArticles} articles
                </p>
              )}
            </section>
          )}

          {isReviewer && (
            <section class="bg-white rounded-lg shadow-sm border border-slate-200 p-6 md:p-8">
              <h2 class="text-2xl font-bold text-slate-900 mb-4">Medical Review Coverage</h2>
              <p class="text-slate-700 mb-4">
                Dr. Okonkwo provides medical review for 100% of CompareMensCare content, ensuring every article meets the highest standards of medical accuracy and evidence-based practice.
              </p>
              <div class="grid grid-cols-3 gap-4 text-center">
                <div class="bg-emerald-50 rounded-lg p-4">
                  <div class="text-3xl font-bold text-emerald-600">{reviewerGuides.length}</div>
                  <div class="text-sm text-slate-600">Guides Reviewed</div>
                </div>
                <div class="bg-emerald-50 rounded-lg p-4">
                  <div class="text-3xl font-bold text-emerald-600">{reviewerBlog.length}</div>
                  <div class="text-sm text-slate-600">Blog Posts Reviewed</div>
                </div>
                <div class="bg-emerald-50 rounded-lg p-4">
                  <div class="text-3xl font-bold text-emerald-600">{reviewerBrands.length}</div>
                  <div class="text-sm text-slate-600">Brand Reviews</div>
                </div>
              </div>
            </section>
          )}
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
          <!-- Expertise -->
          <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-6">
            <h3 class="text-lg font-semibold text-slate-900 mb-4">Areas of Expertise</h3>
            <div class="space-y-2">
              {author.expertise.map(item => (
                <div class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-brand-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-sm text-slate-700">{item}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- Education & Credentials -->
          <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-6">
            <h3 class="text-lg font-semibold text-slate-900 mb-4">Education & Credentials</h3>
            <div class="space-y-3">
              {author.education.map(edu => (
                <div class="text-sm text-slate-700 pl-4 border-l-2 border-brand-accent">
                  {edu}
                </div>
              ))}
            </div>
          </div>

          <!-- Publications & Recognition -->
          <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-6">
            <h3 class="text-lg font-semibold text-slate-900 mb-4">Publications & Recognition</h3>
            <div class="space-y-2">
              {author.publications.map(pub => (
                <div class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-brand-accent flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
                  </svg>
                  <span class="text-sm text-slate-700">{pub}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- Professional Affiliations -->
          <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-6">
            <h3 class="text-lg font-semibold text-slate-900 mb-4">Professional Affiliations</h3>
            <div class="space-y-2">
              {author.affiliations.map(affiliation => (
                <div class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-brand-accent flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-sm text-slate-700">{affiliation}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

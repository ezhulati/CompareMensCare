const schema = {
  '@context': 'https://schema.org',
  '@type': 'MedicalWebPage',
  name: 'Best Online Therapy & Mental Health Services',
  description: 'Compare the best online therapy platforms and mental health services for men including BetterHelp, Talkspace, and Cerebral.',
  about: {
    '@type': 'MedicalCondition',
    name: 'Mental Health',
  },
};
---

<BaseLayout
  title="Best Online Therapy & Mental Health Services for Men"
  description="Compare top online therapy and mental health platforms including BetterHelp, Talkspace, Cerebral, and more. Find affordable counseling and psychiatric care."
  schema={schema}
>
  <!-- Hero Section -->
  <section class="bg-white py-12 lg:py-16 border-b border-slate-200">
    <div class="container-custom">
      <div class="max-w-4xl">

---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Icon from '../components/Icon.astro';
import { getCategoryName } from '../utils/helpers';

// Map category slugs to icon names
const categoryIcons: Record<string, string> = {
  'sexual-health': 'sexual-health',
  'hair-health': 'hair-health',
  'testosterone': 'testosterone',
  'weight-loss': 'weight-loss',
  'mental-health': 'mental-health',
  'diagnostics': 'diagnostics',
  'general': 'diagnostics', // fallback for general category
};

// Fetch all guides from content collection
const allGuides = await getCollection('guides');

// Sort by featured first, then by publish date (newest first)
const guides = allGuides
  .sort((a, b) => {
    if (a.data.featured && !b.data.featured) return -1;
    if (!a.data.featured && b.data.featured) return 1;
    return b.data.publishDate.getTime() - a.data.publishDate.getTime();
  })
  .map(guide => ({
    title: guide.data.title,
    category: getCategoryName(guide.data.category),
    slug: `/guides/${guide.slug}`,
    description: guide.data.description,
    icon: categoryIcons[guide.data.category] || 'diagnostics',
  }));

const schema = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: 'Men\'s Health Guides & Resources',
  description: 'Comprehensive guides about men\'s health topics including ED, hair loss, TRT, weight loss, and mental health.',
};
---

<BaseLayout
  title="Men's Health Guides & Resources - CompareMensCare"
  description="In-depth guides covering ED treatment, hair loss, testosterone therapy, weight loss, mental health, and at-home testing. Evidence-based information you can trust."
  schema={schema}
>
  <!-- Hero Section -->
  <section class="bg-white py-12 lg:py-16 border-b border-slate-200">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-slate-100 text-slate-700 text-sm font-medium mb-8 border border-slate-200">
          <span class="w-2 h-2 bg-emerald-500 rounded-full"></span>
          Evidence-Based Resources
        </div>

        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-slate-900 mb-4 sm:mb-6 leading-tight px-4">
          Men's Health Guides
        </h1>
        <p class="text-base sm:text-lg lg:text-xl text-slate-600 leading-relaxed mb-6 sm:mb-8 max-w-2xl mx-auto px-4">
          In-depth, research-backed guides to help you understand your options and make informed decisions
          about your health.
        </p>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <section class="py-10 bg-slate-50 border-b border-slate-200">
    <div class="container-custom">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center max-w-4xl mx-auto">
        <div>
          <div class="text-xl sm:text-2xl lg:text-3xl font-bold text-slate-900 mb-1">{guides.length}</div>
          <div class="text-xs sm:text-sm text-slate-600">Guides Published</div>
        </div>
        <div>
          <div class="text-xl sm:text-2xl lg:text-3xl font-bold text-slate-900 mb-1">6</div>
          <div class="text-xs sm:text-sm text-slate-600">Health Categories</div>
        </div>
        <div>
          <div class="text-xl sm:text-2xl lg:text-3xl font-bold text-slate-900 mb-1">100%</div>
          <div class="text-xs sm:text-sm text-slate-600">Evidence-Based</div>
        </div>
        <div>
          <div class="text-xl sm:text-2xl lg:text-3xl font-bold text-slate-900 mb-1">Monthly</div>
          <div class="text-xs sm:text-sm text-slate-600">Updated</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Guides Grid -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="mb-8 sm:mb-10">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-slate-900 mb-2 sm:mb-3 text-center px-4">
          Browse All Guides
        </h2>
        <p class="text-base sm:text-lg text-slate-600 text-center max-w-2xl mx-auto px-4">
          Comprehensive resources covering everything from treatment options to understanding your symptoms.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
        {guides.map((guide) => (
          <a
            href={guide.slug}
            class="card-hover p-6 group"
          >
            <div class="mb-4">
              <div class="text-brand-accent">
                <Icon name={guide.icon} size="xl" />
              </div>
            </div>

            <div class="mb-2">
              <span class="text-xs font-medium text-brand-accent uppercase tracking-wide">
                {guide.category}
              </span>
            </div>

            <h3 class="font-bold text-lg mb-3 text-slate-900 group-hover:text-brand-accent transition-colors leading-tight">
              {guide.title}
            </h3>

            <p class="text-slate-600 text-sm leading-relaxed mb-4">
              {guide.description}
            </p>

            <span class="text-brand-accent font-medium text-sm inline-flex items-center group-hover:gap-2 transition-all">
              Read guide
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Categories CTA -->
  <section class="section-light">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-slate-900 mb-3 sm:mb-4 px-4">
          Looking for Service Comparisons?
        </h2>
        <p class="text-base sm:text-lg text-slate-600 mb-6 sm:mb-8 max-w-2xl mx-auto px-4">
          Check out our detailed category pages comparing top telehealth services.
        </p>
        <div class="grid md:grid-cols-3 gap-3 sm:gap-4">
          <a href="/sexual-health" class="card-hover p-5 sm:p-6 group">
            <div class="mb-3 flex justify-center">
              <Icon name="sexual-health" class="w-8 h-8 text-red-600" />
            </div>
            <h3 class="font-heading font-bold text-base sm:text-lg text-slate-900 group-hover:text-brand-accent transition-colors">
              Sexual Health
            </h3>
          </a>
          <a href="/hair-health" class="card-hover p-5 sm:p-6 group">
            <div class="mb-3 flex justify-center">
              <Icon name="hair-health" class="w-8 h-8 text-amber-600" />
            </div>
            <h3 class="font-heading font-bold text-base sm:text-lg text-slate-900 group-hover:text-brand-accent transition-colors">
              Hair Health
            </h3>
          </a>
          <a href="/testosterone" class="card-hover p-5 sm:p-6 group">
            <div class="mb-3 flex justify-center">
              <Icon name="testosterone" class="w-8 h-8 text-blue-600" />
            </div>
            <h3 class="font-heading font-bold text-base sm:text-lg text-slate-900 group-hover:text-brand-accent transition-colors">
              Testosterone
            </h3>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Trust Us -->
  <section class="section bg-white">
    <div class="container-custom max-w-3xl">
      <div class="text-center mb-8 sm:mb-10">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-slate-900 mb-3 sm:mb-4 px-4">
          Why Trust Our Guides?
        </h2>
      </div>

      <div class="grid md:grid-cols-3 gap-5 sm:gap-6">
        <div class="text-center">
          <div class="w-14 h-14 sm:w-16 sm:h-16 rounded-xl bg-blue-100 text-blue-600 flex items-center justify-center mx-auto mb-3 sm:mb-4">
            <Icon name="book" class="w-7 h-7 sm:w-8 sm:h-8" />
          </div>
          <h3 class="font-heading font-bold text-base sm:text-lg mb-2 text-slate-900">Evidence-Based</h3>
          <p class="text-slate-600 text-sm leading-snug">
            All information backed by clinical studies, medical literature, and expert consensus.
          </p>
        </div>

        <div class="text-center">
          <div class="w-14 h-14 sm:w-16 sm:h-16 rounded-xl bg-emerald-100 text-emerald-600 flex items-center justify-center mx-auto mb-3 sm:mb-4">
            <Icon name="search" class="w-7 h-7 sm:w-8 sm:h-8" />
          </div>
          <h3 class="font-heading font-bold text-base sm:text-lg mb-2 text-slate-900">Transparent</h3>
          <p class="text-slate-600 text-sm leading-snug">
            We cite our sources, disclose affiliations, and present balanced perspectives.
          </p>
        </div>

        <div class="text-center">
          <div class="w-14 h-14 sm:w-16 sm:h-16 rounded-xl bg-purple-100 text-purple-600 flex items-center justify-center mx-auto mb-3 sm:mb-4">
            <Icon name="star" class="w-7 h-7 sm:w-8 sm:h-8" />
          </div>
          <h3 class="font-heading font-bold text-base sm:text-lg mb-2 text-slate-900">Regularly Updated</h3>
          <p class="text-slate-600 text-sm leading-snug">
            Content reviewed and updated monthly to reflect latest research and service changes.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter CTA -->
  <section class="section bg-slate-900 text-white">
    <div class="container-custom text-center max-w-2xl mx-auto">
      <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold mb-3 sm:mb-4 px-4">
        Get Health Tips in Your Inbox
      </h2>
      <p class="text-base sm:text-lg lg:text-xl text-slate-300 mb-6 sm:mb-8 px-4">
        Subscribe to get our latest guides, service updates, and evidence-based health tips.
      </p>
      <div class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
        <input
          type="email"
          placeholder="Enter your email"
          class="flex-1 px-4 py-3 rounded-lg bg-white text-slate-900 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-brand-accent"
        />
        <button class="btn bg-brand-accent hover:bg-brand-accent/90 text-white px-6">
          Subscribe
        </button>
      </div>
      <p class="text-xs text-slate-400 mt-4">
        We respect your privacy. Unsubscribe anytime.
      </p>
    </div>
  </section>
</BaseLayout>

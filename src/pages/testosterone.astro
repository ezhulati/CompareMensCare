    slug: 'trt-nation',
    rating: 4.4,
    consultationFee: '$250',
    medicationFrom: '$99/month',
    subscriptionType: 'Flexible',
    pros: [
      'Affordable medication',
      'Multiple testosterone options',
      'Fast shipping',
    ],
    cons: [
      'High consultation fee',
      'Less comprehensive monitoring',
    ],
    bestFor: [
      { label: 'Best Value Medication', variant: 'success', icon: 'affordability' },
    ],
  },
  {
    name: 'Hims',
    slug: 'hims',
    rating: 4.3,
    consultationFee: 'Free',
    medicationFrom: '$79/month',
    subscriptionType: 'Subscription',
    pros: [

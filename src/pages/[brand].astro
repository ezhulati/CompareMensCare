---
import { getCollection, getEntry } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import AffiliateButton from '../components/AffiliateButton.astro';
import { formatDate, getCategoryName } from '../utils/helpers';

export async function getStaticPaths() {
  const brands = await getCollection('brands');
  return brands.map((brand) => ({
    params: { brand: brand.slug },
    props: { brand },
  }));
}

const { brand } = Astro.props;
const { Content } = await brand.render();

const schema = {
  '@context': 'https://schema.org',
  '@type': 'Product',
  name: brand.data.title,
  description: brand.data.description,
  brand: {
    '@type': 'Brand',
    name: brand.data.title,
  },
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: brand.data.rating,
    bestRating: 5,
    worstRating: 1,
  },
  offers: {
    '@type': 'Offer',
    price: brand.data.pricing.medicationFrom,
    priceCurrency: 'USD',
    availability: 'https://schema.org/InStock',
  },
};
---

<BaseLayout
  title={`${brand.data.title} Review 2025 - Pricing, Pros & Cons`}
  description={brand.data.description}
  type="article"
  publishDate={brand.data.publishDate}
  author={brand.data.reviewerName}
  schema={schema}
>
  <!-- Breadcrumbs -->
  <div class="bg-gray-50 border-b border-gray-200 py-3">
    <div class="container-custom">
      <nav class="flex items-center space-x-2 text-sm text-gray-600">
        <a href="/" class="hover:text-brand-primary">Home</a>
        <span>›</span>
        <a href={`/${brand.data.categories[0]}`} class="hover:text-brand-primary capitalize">
          {getCategoryName(brand.data.categories[0])}
        </a>
        <span>›</span>
        <span class="text-gray-900 font-medium">{brand.data.title}</span>
      </nav>
    </div>
  </div>

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-50 to-indigo-50 py-12">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6 mb-6">
          <div class="flex-1">
            <h1 class="text-4xl lg:text-5xl font-display font-bold text-gray-900 mb-4">
              {brand.data.title} Review
            </h1>
            <p class="text-xl text-gray-600 leading-relaxed">
              {brand.data.description}
            </p>
          </div>

          <!-- Rating Card -->
          <div class="bg-white rounded-lg shadow-md p-6 md:w-64 flex-shrink-0">
            <div class="text-center">
              <div class="text-5xl font-bold text-brand-primary mb-2">{brand.data.rating.toFixed(1)}</div>
              <div class="flex justify-center items-center mb-2">
                {Array.from({ length: 5 }).map((_, i) => (
                  <span class={`text-2xl ${i < Math.floor(brand.data.rating) ? 'text-yellow-400' : 'text-gray-300'}`}>★</span>
                ))}
              </div>
              <div class="text-sm text-gray-600 mb-4">Out of 5.0</div>
              <AffiliateButton
                brand={brand.data.affiliateLink}
                text="Visit Site"
                variant="primary"
                size="md"
                location="hero-cta"
                class="w-full"
              />
            </div>
          </div>
        </div>

        <!-- Quick Info Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 bg-white rounded-lg shadow-sm p-6">
          <div class="text-center">
            <div class="text-sm text-gray-600 mb-1">Consultation</div>
            <div class="font-semibold text-gray-900">{brand.data.pricing.consultationFee}</div>
          </div>
          <div class="text-center">
            <div class="text-sm text-gray-600 mb-1">Starting From</div>
            <div class="font-semibold text-gray-900">{brand.data.pricing.medicationFrom}</div>
          </div>
          <div class="text-center">
            <div class="text-sm text-gray-600 mb-1">Type</div>
            <div class="font-semibold text-gray-900">{brand.data.pricing.subscriptionType}</div>
          </div>
          <div class="text-center">
            <div class="text-sm text-gray-600 mb-1">Availability</div>
            <div class="font-semibold text-gray-900">{brand.data.availability.countries[0]}</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Pros and Cons -->
  <section class="py-12 bg-white">
    <div class="container-custom max-w-4xl">
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Pros -->
        <div class="bg-green-50 rounded-lg p-6">
          <h2 class="text-2xl font-display font-bold text-green-900 mb-4 flex items-center">
            <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Pros
          </h2>
          <ul class="space-y-3">
            {brand.data.pros.map((pro) => (
              <li class="flex items-start">
                <svg class="w-5 h-5 text-green-600 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-700">{pro}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- Cons -->
        <div class="bg-red-50 rounded-lg p-6">
          <h2 class="text-2xl font-display font-bold text-red-900 mb-4 flex items-center">
            <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Cons
          </h2>
          <ul class="space-y-3">
            {brand.data.cons.map((con) => (
              <li class="flex items-start">
                <svg class="w-5 h-5 text-red-600 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                <span class="text-gray-700">{con}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <article class="py-12 bg-gray-50">
    <div class="container-custom max-w-4xl">
      <div class="prose prose-lg max-w-none bg-white rounded-lg shadow-sm p-8">
        <Content />
      </div>
    </div>
  </article>

  <!-- Services Offered -->
  <section class="py-12 bg-white">
    <div class="container-custom max-w-4xl">
      <h2 class="text-3xl font-display font-bold mb-6">Services Offered</h2>
      <div class="grid md:grid-cols-2 gap-4">
        {brand.data.services.map((service) => (
          <div class="flex items-center bg-gray-50 rounded-lg p-4">
            <svg class="w-5 h-5 text-brand-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="text-gray-900">{service}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-12 bg-brand-primary text-white">
    <div class="container-custom max-w-4xl text-center">
      <h2 class="text-3xl font-display font-bold mb-4">Ready to Get Started with {brand.data.title}?</h2>
      <p class="text-xl mb-8 opacity-90">
        Join thousands of men who trust {brand.data.title} for their health needs.
      </p>
      <AffiliateButton
        brand={brand.data.affiliateLink}
        text={`Visit ${brand.data.title}`}
        variant="secondary"
        size="lg"
        location="bottom-cta"
      />
      <p class="text-sm mt-4 opacity-75">
        Consultation fee: {brand.data.pricing.consultationFee} • Pricing from {brand.data.pricing.medicationFrom}
      </p>
    </div>
  </section>

  <!-- Review Info -->
  <section class="py-8 bg-gray-50 border-t border-gray-200">
    <div class="container-custom max-w-4xl">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between text-sm text-gray-600">
        <div>
          <strong>Last Reviewed:</strong> {formatDate(brand.data.lastReviewed)}
        </div>
        {brand.data.reviewerName && (
          <div>
            <strong>Reviewed by:</strong> {brand.data.reviewerName}
            {brand.data.reviewerCredentials && `, ${brand.data.reviewerCredentials}`}
          </div>
        )}
      </div>
    </div>
  </section>
</BaseLayout>

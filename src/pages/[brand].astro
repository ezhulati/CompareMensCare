---
import { getCollection, getEntry } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import AffiliateButton from '../components/AffiliateButton.astro';
import BestForBadge from '../components/BestForBadge.astro';
import { formatDate, getCategoryName } from '../utils/helpers';

export async function getStaticPaths() {
  const brands = await getCollection('brands');
  return brands.map((brand) => ({
    params: { brand: brand.slug },
    props: { brand },
  }));
}

const { brand } = Astro.props;
const { Content } = await brand.render();

// Get related brands
const allBrands = await getCollection('brands');
const relatedBrands = allBrands
  .filter((b) =>
    b.slug !== brand.slug &&
    b.data.categories.some((cat) => brand.data.categories.includes(cat))
  )
  .slice(0, 3);

// Priority score helper
const getPriorityPercentage = (score?: number) => {
  if (!score) return 0;
  return (score / 10) * 100;
};

const schema = {
  '@context': 'https://schema.org',
  '@type': 'Product',
  name: brand.data.title,
  description: brand.data.description,
  brand: {
    '@type': 'Brand',
    name: brand.data.title,
  },
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: brand.data.rating,
    bestRating: 5,
    worstRating: 1,
  },
  offers: {
    '@type': 'Offer',
    price: brand.data.pricing.medicationFrom,
    priceCurrency: 'USD',
    availability: 'https://schema.org/InStock',
  },
};
---

<BaseLayout
  title={`${brand.data.title} Review 2025 - Pricing, Pros & Cons`}
  description={brand.data.description}
  type="article"
  publishDate={brand.data.publishDate}
  author={brand.data.reviewerName}
  schema={schema}
>
  <!-- Breadcrumbs -->
  <div class="bg-gray-50 border-b border-gray-200 py-3">
    <div class="container-custom">
      <nav class="flex items-center space-x-2 text-sm text-gray-600">
        <a href="/" class="hover:text-brand-primary">Home</a>
        <span>›</span>
        <a href={`/${brand.data.categories[0]}`} class="hover:text-brand-primary capitalize">
          {getCategoryName(brand.data.categories[0])}
        </a>
        <span>›</span>
        <span class="text-gray-900 font-medium">{brand.data.title}</span>
      </nav>
    </div>
  </div>

  <!-- Hero Section -->
  <section class="bg-white py-12 lg:py-16 border-b border-slate-200">
    <div class="container-custom">
      <div class="max-w-5xl mx-auto">
        <div class="grid lg:grid-cols-3 gap-8">
          <!-- Main Info -->
          <div class="lg:col-span-2">
            <h1 class="text-4xl lg:text-5xl font-bold text-slate-900 mb-4">
              {brand.data.title} Review
            </h1>
            <p class="text-xl text-slate-600 leading-relaxed mb-6">
              {brand.data.description}
            </p>

            <!-- Best For Badges -->
            {brand.data.bestFor && brand.data.bestFor.length > 0 && (
              <div class="flex flex-wrap gap-2 mb-6">
                {brand.data.bestFor.map((item) => (
                  <BestForBadge
                    label={item.label}
                    variant={item.variant}
                    icon={item.icon}
                    size="md"
                  />
                ))}
              </div>
            )}

            <!-- Rating -->
            <div class="flex items-center gap-4">
              <div class="flex items-center gap-2">
                {Array.from({ length: 5 }).map((_, i) => (
                  <svg
                    class={`w-5 h-5 ${
                      i < Math.floor(brand.data.rating)
                        ? 'text-amber-400'
                        : 'text-slate-300'
                    }`}
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <span class="text-2xl font-bold text-slate-900">{brand.data.rating}</span>
              {brand.data.reviewCount && (
                <span class="text-slate-600">({brand.data.reviewCount.toLocaleString()} reviews)</span>
              )}
            </div>
          </div>

          <!-- Pricing Card -->
          <div class="lg:col-span-1">
            <div class="card p-6 sticky top-20">
              <div class="mb-4">
                <div class="text-sm text-slate-600 mb-1">Starting at</div>
                <div class="text-3xl font-bold text-slate-900 mb-1">
                  {brand.data.pricing.medicationFrom || brand.data.pricing.consultationFee}
                </div>
                <div class="text-sm text-slate-600">{brand.data.pricing.subscriptionType}</div>
              </div>

              <div class="space-y-3 mb-6 pb-6 border-b border-slate-200">
                <div class="flex justify-between text-sm">
                  <span class="text-slate-600">Consultation:</span>
                  <span class="font-medium text-slate-900">{brand.data.pricing.consultationFee}</span>
                </div>
                {brand.data.pricing.medicationFrom && (
                  <div class="flex justify-between text-sm">
                    <span class="text-slate-600">Medication from:</span>
                    <span class="font-medium text-slate-900">{brand.data.pricing.medicationFrom}</span>
                  </div>
                )}
                <div class="flex justify-between text-sm">
                  <span class="text-slate-600">Availability:</span>
                  <span class="font-medium text-slate-900">{brand.data.availability.countries[0]}</span>
                </div>
              </div>

              <AffiliateButton
                brand={brand.data.affiliateLink}
                text={`Visit ${brand.data.title}`}
                variant="primary"
                size="lg"
                location="brand-detail-sidebar"
                class="w-full justify-center mb-3"
              />

              <p class="text-xs text-slate-500 text-center">
                Affiliate link - we may earn a commission
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Priority Scores -->
  {brand.data.priorities && (
    <section class="section bg-slate-50">
      <div class="container-custom">
        <div class="max-w-5xl mx-auto">
          <h2 class="text-2xl lg:text-3xl font-bold text-slate-900 mb-3 text-center">
            How {brand.data.title} Scores
          </h2>
          <p class="text-slate-600 text-center mb-8 max-w-2xl mx-auto">
            We evaluate each service across key priorities to help you find your best match.
          </p>

          <div class="grid md:grid-cols-2 gap-4">
            {brand.data.priorities.affordability !== undefined && (
              <div class="card p-4">
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center gap-2">
                    <span>💰</span>
                    <span class="font-medium text-slate-900">Best Value</span>
                  </div>
                  <span class="text-sm font-bold text-slate-900">{brand.data.priorities.affordability}/10</span>
                </div>
                <div class="w-full bg-slate-200 rounded-full h-2">
                  <div
                    class="bg-brand-accent rounded-full h-2 transition-all duration-500"
                    style={`width: ${getPriorityPercentage(brand.data.priorities.affordability)}%`}
                  ></div>
                </div>
              </div>
            )}

            {brand.data.priorities.privacy !== undefined && (
              <div class="card p-4">
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center gap-2">
                    <span>🔒</span>
                    <span class="font-medium text-slate-900">Maximum Privacy</span>
                  </div>
                  <span class="text-sm font-bold text-slate-900">{brand.data.priorities.privacy}/10</span>
                </div>
                <div class="w-full bg-slate-200 rounded-full h-2">
                  <div
                    class="bg-brand-accent rounded-full h-2 transition-all duration-500"
                    style={`width: ${getPriorityPercentage(brand.data.priorities.privacy)}%`}
                  ></div>
                </div>
              </div>
            )}

            {brand.data.priorities.speed !== undefined && (
              <div class="card p-4">
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center gap-2">
                    <span>⚡</span>
                    <span class="font-medium text-slate-900">Fast Access</span>
                  </div>
                  <span class="text-sm font-bold text-slate-900">{brand.data.priorities.speed}/10</span>
                </div>
                <div class="w-full bg-slate-200 rounded-full h-2">
                  <div
                    class="bg-brand-accent rounded-full h-2 transition-all duration-500"
                    style={`width: ${getPriorityPercentage(brand.data.priorities.speed)}%`}
                  ></div>
                </div>
              </div>
            )}

            {brand.data.priorities.selection !== undefined && (
              <div class="card p-4">
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center gap-2">
                    <span>🎯</span>
                    <span class="font-medium text-slate-900">Treatment Variety</span>
                  </div>
                  <span class="text-sm font-bold text-slate-900">{brand.data.priorities.selection}/10</span>
                </div>
                <div class="w-full bg-slate-200 rounded-full h-2">
                  <div
                    class="bg-brand-accent rounded-full h-2 transition-all duration-500"
                    style={`width: ${getPriorityPercentage(brand.data.priorities.selection)}%`}
                  ></div>
                </div>
              </div>
            )}

            {brand.data.priorities.transparency !== undefined && (
              <div class="card p-4">
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center gap-2">
                    <span>📊</span>
                    <span class="font-medium text-slate-900">Price Transparency</span>
                  </div>
                  <span class="text-sm font-bold text-slate-900">{brand.data.priorities.transparency}/10</span>
                </div>
                <div class="w-full bg-slate-200 rounded-full h-2">
                  <div
                    class="bg-brand-accent rounded-full h-2 transition-all duration-500"
                    style={`width: ${getPriorityPercentage(brand.data.priorities.transparency)}%`}
                  ></div>
                </div>
              </div>
            )}

            {brand.data.priorities.ease !== undefined && (
              <div class="card p-4">
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center gap-2">
                    <span>✨</span>
                    <span class="font-medium text-slate-900">Easy to Use</span>
                  </div>
                  <span class="text-sm font-bold text-slate-900">{brand.data.priorities.ease}/10</span>
                </div>
                <div class="w-full bg-slate-200 rounded-full h-2">
                  <div
                    class="bg-brand-accent rounded-full h-2 transition-all duration-500"
                    style={`width: ${getPriorityPercentage(brand.data.priorities.ease)}%`}
                  ></div>
                </div>
              </div>
            )}

            {brand.data.priorities.support !== undefined && (
              <div class="card p-4">
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center gap-2">
                    <span>💬</span>
                    <span class="font-medium text-slate-900">Great Support</span>
                  </div>
                  <span class="text-sm font-bold text-slate-900">{brand.data.priorities.support}/10</span>
                </div>
                <div class="w-full bg-slate-200 rounded-full h-2">
                  <div
                    class="bg-brand-accent rounded-full h-2 transition-all duration-500"
                    style={`width: ${getPriorityPercentage(brand.data.priorities.support)}%`}
                  ></div>
                </div>
              </div>
            )}

            {brand.data.priorities.comprehensive !== undefined && (
              <div class="card p-4">
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center gap-2">
                    <span>🏪</span>
                    <span class="font-medium text-slate-900">One-Stop Shop</span>
                  </div>
                  <span class="text-sm font-bold text-slate-900">{brand.data.priorities.comprehensive}/10</span>
                </div>
                <div class="w-full bg-slate-200 rounded-full h-2">
                  <div
                    class="bg-brand-accent rounded-full h-2 transition-all duration-500"
                    style={`width: ${getPriorityPercentage(brand.data.priorities.comprehensive)}%`}
                  ></div>
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Pros and Cons -->
  <section class="section bg-white">
    <div class="container-custom max-w-5xl">
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Pros -->
        <div class="card p-6">
          <h3 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Pros
          </h3>
          <ul class="space-y-3">
            {brand.data.pros.map((pro) => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-emerald-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span class="text-slate-700">{pro}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- Cons -->
        <div class="card p-6">
          <h3 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
            Cons
          </h3>
          <ul class="space-y-3">
            {brand.data.cons.map((con) => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-amber-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
                <span class="text-slate-700">{con}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <article class="py-12 bg-gray-50">
    <div class="container-custom max-w-4xl">
      <div class="prose prose-lg max-w-none bg-white rounded-lg shadow-sm p-8">
        <Content />
      </div>
    </div>
  </article>

  <!-- Services Offered -->
  <section class="py-12 bg-white">
    <div class="container-custom max-w-4xl">
      <h2 class="text-3xl font-display font-bold mb-6">Services Offered</h2>
      <div class="grid md:grid-cols-2 gap-4">
        {brand.data.services.map((service) => (
          <div class="flex items-center bg-gray-50 rounded-lg p-4">
            <svg class="w-5 h-5 text-brand-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="text-gray-900">{service}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Related Brands -->
  {relatedBrands.length > 0 && (
    <section class="section bg-white border-t border-slate-200">
      <div class="container-custom">
        <h2 class="text-2xl font-bold text-slate-900 mb-8 text-center">
          Compare with Similar Services
        </h2>
        <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
          {relatedBrands.map((related) => (
            <a href={`/${related.slug}`} class="card-hover p-6 group">
              <h3 class="text-xl font-bold text-slate-900 mb-2 group-hover:text-brand-accent transition-colors">
                {related.data.title}
              </h3>
              <p class="text-sm text-slate-600 mb-4 line-clamp-2">
                {related.data.description}
              </p>
              <div class="flex items-center gap-2 mb-3">
                {Array.from({ length: 5 }).map((_, i) => (
                  <svg
                    class={`w-4 h-4 ${
                      i < Math.floor(related.data.rating)
                        ? 'text-amber-400'
                        : 'text-slate-300'
                    }`}
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
                <span class="text-sm font-medium text-slate-700">{related.data.rating}</span>
              </div>
              <span class="text-brand-accent text-sm font-medium inline-flex items-center gap-1 group-hover:gap-2 transition-all">
                View Review
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="section bg-slate-900 text-white">
    <div class="container-custom max-w-4xl text-center">
      <h2 class="text-3xl lg:text-4xl font-bold mb-4">Ready to Get Started with {brand.data.title}?</h2>
      <p class="text-xl text-slate-300 mb-8">
        Join thousands of men who trust {brand.data.title} for their health needs.
      </p>
      <AffiliateButton
        brand={brand.data.affiliateLink}
        text={`Visit ${brand.data.title}`}
        variant="secondary"
        size="lg"
        location="bottom-cta"
        class="bg-white text-slate-900 hover:bg-slate-100"
      />
      <p class="text-sm mt-4 text-slate-400">
        Consultation fee: {brand.data.pricing.consultationFee} • Pricing from {brand.data.pricing.medicationFrom}
      </p>
    </div>
  </section>

  <!-- Review Info -->
  <section class="py-8 bg-gray-50 border-t border-gray-200">
    <div class="container-custom max-w-4xl">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between text-sm text-gray-600">
        <div>
          <strong>Last Reviewed:</strong> {formatDate(brand.data.lastReviewed)}
        </div>
        {brand.data.reviewerName && (
          <div>
            <strong>Reviewed by:</strong> {brand.data.reviewerName}
            {brand.data.reviewerCredentials && `, ${brand.data.reviewerCredentials}`}
          </div>
        )}
      </div>
    </div>
  </section>
</BaseLayout>

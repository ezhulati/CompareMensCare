---
import BaseLayout from '../layouts/BaseLayout.astro';
import GuidedMatcher from '../components/GuidedMatcher.astro';
import PersonalizedResults from '../components/PersonalizedResults.astro';
import { Eye, ShieldCheck, Shield, Heart, Sparkles, Activity, TrendingDown, Brain, Stethoscope } from 'lucide-astro';
import { getCategoryIcon } from '../utils/helpers';

const categories = [
  {
    title: 'Sexual Health',
    slug: 'sexual-health',
    description: 'ED treatments, premature ejaculation solutions, and sexual wellness.',
    providersCount: 8,
  },
  {
    title: 'Hair Health',
    slug: 'hair-health',
    description: 'Hair loss treatments including finasteride, minoxidil, and more.',
    providersCount: 5,
  },
  {
    title: 'Testosterone & Hormones',
    slug: 'testosterone',
    description: 'TRT clinics and hormone optimization services.',
    providersCount: 7,
  },
  {
    title: 'Weight Loss',
    slug: 'weight-loss',
    description: 'GLP-1 medications and personalized weight management.',
    providersCount: 6,
  },
  {
    title: 'Mental Health',
    slug: 'mental-health',
    description: 'Online therapy platforms and psychiatric care.',
    providersCount: 2,
  },
  {
    title: 'Diagnostics & Wellness',
    slug: 'diagnostics',
    description: 'At-home health testing for comprehensive monitoring.',
    providersCount: 1,
  },
];

const categoryIcons: Record<string, any> = {
  'sexual-health': Heart,
  'hair-health': Sparkles,
  'testosterone': Activity,
  'weight-loss': TrendingDown,
  'mental-health': Brain,
  'diagnostics': Stethoscope,
};

const schema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'CompareMensCare.com',
  description: 'Evidence-based comparisons of telehealth services for men\'s health',
  url: 'https://comparemenscare.com',
};
---

<BaseLayout
  title="CompareMensCare.com - Objective Telehealth Service Comparisons"
  description="Evidence-based comparisons of telehealth services for men's health. Compare ED treatments, hair loss solutions, TRT clinics, weight loss programs, and more."
  schema={schema}
>
  <!-- Hero Section -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-slate-100 text-slate-700 text-sm font-medium mb-8 border border-slate-200">
          <span class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></span>
          Trusted by Men Who've Been Where You Are
        </div>

        <h1 class="text-5xl lg:text-6xl font-bold text-slate-900 mb-6 leading-tight">
          You're Not Alone.
          <span class="relative inline-block">
            <span class="relative z-10">We'll Help You</span>
            <span class="absolute bottom-2 left-0 w-full h-3 bg-brand-accent/20 -rotate-1"></span>
          </span>
          Find the Right Care
        </h1>

        <p class="text-xl text-slate-600 mb-4 leading-relaxed max-w-2xl mx-auto">
          Whether you're dealing with ED, hair loss, or just exploring options for the first time — we'll match you with a service that fits your needs, budget, and privacy concerns.
        </p>

        <p class="text-base text-slate-500 mb-8 max-w-2xl mx-auto">
          No pushy recommendations. No affiliate bias. Just honest answers from someone who gets it. <strong>Takes 2 minutes.</strong>
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a href="#matcher" class="btn-primary px-8 group">
            Show Me What Fits
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          <a href="#categories" class="btn-ghost group">
            I Want to Browse First
            <svg class="w-4 h-4 ml-2 opacity-50 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Stats Bar -->
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8 max-w-4xl mx-auto">
        <div class="text-center">
          <div class="text-3xl lg:text-4xl font-bold text-slate-900 mb-1">50+</div>
          <div class="text-sm text-slate-600">Services Reviewed</div>
        </div>
        <div class="text-center">
          <div class="text-3xl lg:text-4xl font-bold text-slate-900 mb-1">6</div>
          <div class="text-sm text-slate-600">Health Categories</div>
        </div>
        <div class="text-center">
          <div class="text-3xl lg:text-4xl font-bold text-slate-900 mb-1">100%</div>
          <div class="text-sm text-slate-600">Transparent</div>
        </div>
        <div class="text-center">
          <div class="text-3xl lg:text-4xl font-bold text-slate-900 mb-1">24/7</div>
          <div class="text-sm text-slate-600">Updated</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Guided Matcher Section -->
  <section id="matcher" class="section-light">
    <div class="container-custom">
      <GuidedMatcher />
    </div>
  </section>

  <!-- Personalized Results (shown after guided matching) -->
  <section class="section bg-white">
    <div class="container-custom">
      <PersonalizedResults />
    </div>
  </section>

  <!-- Philosophy Section -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-6">
          We Get It. This Stuff Is Personal.
        </h2>
        <p class="text-lg text-slate-600 leading-relaxed mb-8">
          Whether you're worried about privacy, safety, or just getting ripped off — we're here to give you straight answers. <strong>There's no "best" service for everyone</strong>, just the right one for your situation.
        </p>
        <div class="grid md:grid-cols-3 gap-6 text-left">
          <div class="card p-6">
            <div class="mb-3 text-blue-600">
              <Eye class="w-12 h-12" />
            </div>
            <h3 class="font-semibold text-lg mb-2 text-slate-900">Real Prices, No BS</h3>
            <p class="text-slate-600 text-sm">
              We show you exactly what you'll pay per dose, per month, with all fees included. No surprises when you check out.
            </p>
          </div>
          <div class="card p-6">
            <div class="mb-3 text-emerald-600">
              <ShieldCheck class="w-12 h-12" />
            </div>
            <h3 class="font-semibold text-lg mb-2 text-slate-900">Safe & Legit Only</h3>
            <p class="text-slate-600 text-sm">
              Every service we list uses licensed US physicians and FDA-approved medications. We check their credentials so you don't have to.
            </p>
          </div>
          <div class="card p-6">
            <div class="mb-3 text-purple-600">
              <Shield class="w-12 h-12" />
            </div>
            <h3 class="font-semibold text-lg mb-2 text-slate-900">Your Privacy Matters</h3>
            <p class="text-slate-600 text-sm">
              We'll tell you which services ship in unmarked boxes, use discreet billing, and keep your info private. Because we know this matters.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section id="categories" class="section-light">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-4">
          Explore Health Categories
        </h2>
        <p class="text-lg text-slate-600 max-w-2xl mx-auto">
          Find services that match your needs in every area of men's health.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {categories.map((category) => {
          const IconComponent = categoryIcons[category.slug];
          return (
            <a
              href={`/${category.slug}`}
              class="card-hover p-8 group"
            >
              <div class="flex items-start justify-between mb-4">
                <div class="flex-1">
                  <h3 class="font-bold text-xl mb-2 text-slate-900 group-hover:text-brand-accent transition-colors">
                    {category.title}
                  </h3>
                  <span class="text-sm text-slate-500">
                    {category.providersCount} services compared
                  </span>
                </div>
                <div class="text-brand-accent group-hover:scale-110 transition-transform duration-200">
                  <IconComponent class="w-12 h-12" />
                </div>
              </div>
              <p class="text-slate-600 text-sm leading-relaxed mb-4">
                {category.description}
              </p>
              <span class="text-brand-accent font-medium text-sm inline-flex items-center group-hover:gap-2 transition-all">
                Compare services
                <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </a>
          );
        })}
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="section bg-white border-t border-slate-200">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-12 text-center">
          Three Questions. One Answer.
        </h2>
        <div class="grid md:grid-cols-3 gap-8 md:gap-12">
          <div class="text-center">
            <div class="w-12 h-12 rounded-xl bg-brand-accent/10 text-brand-accent flex items-center justify-center mx-auto mb-4 font-bold text-xl">
              1
            </div>
            <h3 class="font-semibold text-lg mb-2 text-slate-900">Tell Us Your Situation</h3>
            <p class="text-slate-600 text-sm">
              First time? Already tried something? Just need the cheapest option? We'll ask what matters to you.
            </p>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 rounded-xl bg-brand-accent/10 text-brand-accent flex items-center justify-center mx-auto mb-4 font-bold text-xl">
              2
            </div>
            <h3 class="font-semibold text-lg mb-2 text-slate-900">Get Your Answer</h3>
            <p class="text-slate-600 text-sm">
              We'll show you the one service that actually fits your needs — with clear reasons why.
            </p>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 rounded-xl bg-brand-accent/10 text-brand-accent flex items-center justify-center mx-auto mb-4 font-bold text-xl">
              3
            </div>
            <h3 class="font-semibold text-lg mb-2 text-slate-900">Decide for Yourself</h3>
            <p class="text-slate-600 text-sm">
              Read the full review, see real pricing, and visit the service when you're ready. No pressure.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="section bg-slate-900 text-white">
    <div class="container-custom text-center">
      <h2 class="text-3xl lg:text-4xl font-bold mb-4">
        Stop Googling. Start Getting Answers.
      </h2>
      <p class="text-xl text-slate-300 mb-8 max-w-2xl mx-auto">
        Two minutes from now, you'll know exactly which service is right for you.
      </p>
      <a href="#matcher" class="btn bg-white text-slate-900 hover:bg-slate-100 px-8">
        Show Me What Fits
      </a>
    </div>
  </section>
</BaseLayout>

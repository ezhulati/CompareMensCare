---
import BestForBadge from './BestForBadge.astro';

interface BestFor {
  label: string;
  variant?: 'primary' | 'success' | 'warning' | 'neutral' | 'premium';
  icon?: string;
}

interface Props {
  name: string;
  slug: string;
  description: string;
  startingPrice: string;
  priceUnit?: string;
  rating?: number;
  reviewCount?: number;
  reviewSource?: string;
  reviewUrl?: string;
  bestFor: BestFor[];
  logo?: string;
  featured?: boolean;
}

const {
  name,
  slug,
  description,
  startingPrice,
  priceUnit = 'month',
  rating,
  reviewCount,
  reviewSource,
  reviewUrl,
  bestFor,
  logo,
  featured = false,
} = Astro.props;

const cardClass = featured
  ? 'card-featured'
  : 'card-hover';
---

<article class={`${cardClass} p-card-sm md:p-card-md lg:p-card-lg group relative overflow-hidden flex flex-col`}>
  {featured && (
    <div class="absolute -top-1 -right-1 bg-gradient-primary text-white text-xs font-semibold px-3 py-1 rounded-bl-lg rounded-tr-2xl shadow-glow-blue">
      Top Pick
    </div>
  )}

  <!-- Header: Logo/Brand + Rating + Pricing -->
  <div class="flex items-start justify-between gap-4 mb-3 md:mb-4">
    <div class="flex-1 min-w-0">
      {logo ? (
        <img
          src={logo}
          alt={`${name} logo`}
          class="h-10 md:h-12 w-auto mb-2"
        />
      ) : (
        <h3 class="text-xl md:text-2xl font-bold text-slate-900 mb-1">
          {name}
        </h3>
      )}

      {rating && (
        <div class="flex items-center gap-2 flex-wrap">
          <div class="flex items-center gap-1">
            {Array.from({ length: 5 }).map((_, i) => (
              <svg
                class={`w-4 h-4 ${
                  i < Math.floor(rating)
                    ? 'text-amber-400'
                    : 'text-slate-300'
                }`}
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <span class="text-sm text-slate-600 font-medium">
            {rating}
          </span>
          {reviewCount && reviewUrl ? (
            <a
              href={reviewUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="text-xs text-brand-accent hover:underline inline-flex items-center gap-1"
              title={`See ${reviewCount} ${reviewSource || ''} reviews`}
            >
              ({reviewCount.toLocaleString()} reviews)
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          ) : reviewCount ? (
            <span class="text-xs text-slate-500">
              ({reviewCount.toLocaleString()} reviews)
            </span>
          ) : null}
        </div>
      )}
    </div>

    <div class="text-right flex-shrink-0">
      <div class="text-xs md:text-sm text-slate-600 mb-1">Starting at</div>
      <div class="text-xl md:text-2xl font-bold text-slate-900">
        {startingPrice}
      </div>
      <div class="text-xs text-slate-500">per {priceUnit}</div>
    </div>
  </div>

  <!-- Description -->
  <p class="text-slate-600 text-sm md:text-base mb-3 md:mb-4 leading-relaxed">
    {description}
  </p>

  <!-- Best For Badges -->
  {bestFor && bestFor.length > 0 && (
    <div class="flex flex-wrap gap-2 mb-3 md:mb-4">
      {bestFor.map((item) => (
        <BestForBadge
          label={item.label}
          variant={item.variant}
          icon={item.icon}
          size="sm"
        />
      ))}
    </div>
  )}

  <!-- Auto-push Spacer -->
  <div class="flex-grow"></div>

  <!-- Action Buttons -->
  <div class="flex flex-col sm:flex-row gap-2 md:gap-3 mt-4 md:mt-5">
    <a
      href={`/${slug}`}
      class="flex-1 btn-outline text-center text-sm"
    >
      Learn More
    </a>
    <a
      href={`/${slug}#visit`}
      class="flex-1 btn-primary text-center text-sm group-hover:shadow-md"
    >
      Visit Site
    </a>
  </div>
</article>

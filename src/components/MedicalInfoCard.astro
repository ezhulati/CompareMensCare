---
// Medical information card with left border accent
export interface Props {
  title: string;
  variant?: 'info' | 'success' | 'warning' | 'tip';
  icon?: string;
  class?: string;
}

const { title, variant = 'info', icon, class: className = '' } = Astro.props;

const variants = {
  info: {
    borderColor: 'border-l-medical-blue',
    bgColor: 'bg-medical-blue-light/30',
    iconBg: 'bg-medical-blue',
    iconColor: 'text-white',
  },
  success: {
    borderColor: 'border-l-medical-green',
    bgColor: 'bg-medical-green-light/30',
    iconBg: 'bg-medical-green',
    iconColor: 'text-white',
  },
  warning: {
    borderColor: 'border-l-amber-500',
    bgColor: 'bg-amber-50/50',
    iconBg: 'bg-amber-500',
    iconColor: 'text-white',
  },
  tip: {
    borderColor: 'border-l-medical-purple',
    bgColor: 'bg-medical-purple-light/30',
    iconBg: 'bg-medical-purple',
    iconColor: 'text-white',
  },
};

const variantStyles = variants[variant];

// Default icons based on variant
const defaultIcons = {
  info: `<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />`,
  success: `<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />`,
  warning: `<path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />`,
  tip: `<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />`,
};

const iconPath = icon || defaultIcons[variant];
---

<div class={`card border-l-4 ${variantStyles.borderColor} ${variantStyles.bgColor} p-6 ${className}`}>
  <div class="flex items-start gap-4">
    <div class={`flex-shrink-0 w-10 h-10 rounded-full ${variantStyles.iconBg} flex items-center justify-center`}>
      <svg class={`w-5 h-5 ${variantStyles.iconColor}`} fill="currentColor" viewBox="0 0 20 20" set:html={iconPath} />
    </div>
    <div class="flex-1">
      <h4 class="font-semibold text-slate-900 mb-2">{title}</h4>
      <div class="text-sm text-slate-600 leading-relaxed prose prose-sm max-w-none">
        <slot />
      </div>
    </div>
  </div>
</div>

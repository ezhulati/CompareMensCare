---
/**
 * Organization Schema Component
 * Generates schema.org Organization structured data for the homepage
 * This helps Google understand your site and potentially show it in Knowledge Graph
 */

const organizationSchema = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: 'CompareMensCare',
  alternateName: 'Compare Mens Care',
  url: 'https://comparemenscare.com',
  logo: 'https://comparemenscare.com/logo.png',
  description: 'Independent comparison platform for men\'s telehealth services. Compare pricing, treatments, and reviews for ED, hair loss, testosterone therapy, weight loss, and mental health services.',
  foundingDate: '2025',
  sameAs: [
    // Add social media profiles when available
    // 'https://twitter.com/comparemenscare',
    // 'https://www.facebook.com/comparemenscare',
  ],
  contactPoint: {
    '@type': 'ContactPoint',
    contactType: 'customer support',
    email: 'support@comparemenscare.com',
    availableLanguage: 'English',
  },
  areaServed: {
    '@type': 'Country',
    name: 'United States',
  },
  knowsAbout: [
    'Telehealth Services',
    'Men\'s Health',
    'Erectile Dysfunction Treatment',
    'Hair Loss Treatment',
    'Testosterone Replacement Therapy',
    'Weight Loss Programs',
    'Mental Health Services',
    'Online Prescriptions',
    'Telemedicine',
  ],
};

const websiteSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'CompareMensCare',
  url: 'https://comparemenscare.com',
  description: 'Compare men\'s telehealth services including Hims, Ro, BlueChew, Manual, and more.',
  potentialAction: {
    '@type': 'SearchAction',
    target: {
      '@type': 'EntryPoint',
      urlTemplate: 'https://comparemenscare.com/search?q={search_term_string}',
    },
    'query-input': 'required name=search_term_string',
  },
};
---

<script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />

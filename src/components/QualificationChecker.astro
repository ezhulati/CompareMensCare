---
interface Props {
  title?: string;
  description?: string;
  goodCandidateIf: string[];
  notRightIf: string[];
  whenToSeeDoctorTitle?: string;
  whenToSeeDoctor?: string[];
  ctaText?: string;
  ctaHref?: string;
}

const {
  title = "Are You a Good Candidate?",
  description,
  goodCandidateIf,
  notRightIf,
  whenToSeeDoctorTitle = "When to See a Doctor",
  whenToSeeDoctor,
  ctaText,
  ctaHref,
} = Astro.props;
---

<section id="qualification" class="mb-12">
  <div class="mb-8">
    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
      {title}
    </h2>
    {description && (
      <p class="text-lg text-gray-600 leading-relaxed">
        {description}
      </p>
    )}
  </div>

  <div class="grid md:grid-cols-2 gap-6 mb-8">
    <!-- Good Candidate Card -->
    <div class="bg-gradient-to-br from-green-50 to-white border-2 border-green-200 rounded-xl p-6 shadow-sm">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 bg-medical-green-500 rounded-full flex items-center justify-center flex-shrink-0">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900">You're a Good Candidate If:</h3>
      </div>
      <ul class="space-y-3">
        {goodCandidateIf.map((item) => (
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-medical-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-gray-700 leading-relaxed">{item}</span>
          </li>
        ))}
      </ul>
    </div>

    <!-- Not Right Card -->
    <div class="bg-gradient-to-br from-red-50 to-white border-2 border-red-200 rounded-xl p-6 shadow-sm">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 bg-red-500 rounded-full flex items-center justify-center flex-shrink-0">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900">Not Right If:</h3>
      </div>
      <ul class="space-y-3">
        {notRightIf.map((item) => (
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
            <span class="text-gray-700 leading-relaxed">{item}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>

  <!-- When to See a Doctor (if provided) -->
  {whenToSeeDoctor && whenToSeeDoctor.length > 0 && (
    <div class="bg-yellow-50 border-2 border-yellow-200 rounded-xl p-6 mb-6">
      <div class="flex items-start gap-3 mb-4">
        <svg class="w-6 h-6 text-yellow-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <div class="flex-1">
          <h3 class="text-lg font-bold text-gray-900 mb-2">{whenToSeeDoctorTitle}</h3>
          <ul class="space-y-2">
            {whenToSeeDoctor.map((item) => (
              <li class="flex items-start gap-2">
                <span class="text-yellow-600 font-bold">â€¢</span>
                <span class="text-gray-700">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  )}

  <!-- Optional CTA -->
  {ctaText && ctaHref && (
    <div class="text-center">
      <a
        href={ctaHref}
        class="inline-block bg-brand-accent text-white font-bold text-lg px-8 py-4 rounded-lg hover:bg-blue-700 transition-all transform hover:scale-105 shadow-md"
      >
        {ctaText}
      </a>
    </div>
  )}
</section>

---
/**
 * KeyTakeaways Component
 *
 * Displays key takeaways at the end of guides and articles.
 * Provides AI platforms with clear, quotable conclusions.
 *
 * Props:
 * - takeaways: Array of key takeaway points (string[], required)
 * - title: Optional custom title (string, default: "Key Takeaways")
 */

interface Props {
  takeaways: string[];
  title?: string;
}

const { takeaways, title = "Key Takeaways" } = Astro.props;
---

<div class="key-takeaways bg-slate-900 text-white rounded-lg p-8 my-8">
  <div class="flex items-center gap-3 mb-6">
    <svg class="w-8 h-8 text-brand-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    <h3 class="text-2xl font-bold">{title}</h3>
  </div>

  <ul class="space-y-4">
    {takeaways.map((takeaway, index) => (
      <li class="flex items-start gap-4">
        <span class="flex-shrink-0 w-8 h-8 rounded-full bg-brand-accent text-slate-900 font-bold flex items-center justify-center text-sm">
          {index + 1}
        </span>
        <p class="flex-1 text-slate-100 leading-relaxed pt-1">
          {takeaway}
        </p>
      </li>
    ))}
  </ul>
</div>

<style>
  .key-takeaways {
    /* Ensure high visibility and AI parseability */
    background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
  }

  .key-takeaways p {
    line-height: 1.7;
  }
</style>

---
interface TreatmentOption {
  name: string;
  description: string;
  effectiveness?: string;
  speed?: string;
  cost?: string;
  availability?: string;
}

interface ServiceCard {
  name: string;
  brandSlug: string;
  affiliateId: string;
  rating: number;
  price: string;
  bestFor: string;
  highlights: string[];
  badge?: string;
}

interface Props {
  title?: string;
  description?: string;
  comparisonTable?: TreatmentOption[];
  topServices?: ServiceCard[];
  showComparison?: boolean;
  showServices?: boolean;
}

const {
  title = "Your Treatment Options",
  description,
  comparisonTable = [],
  topServices = [],
  showComparison = true,
  showServices = true,
} = Astro.props;
---

<section id="treatment-options" class="mb-12">
  <div class="mb-8">
    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
      {title}
    </h2>
    {description && (
      <p class="text-lg text-gray-600 leading-relaxed">
        {description}
      </p>
    )}
  </div>

  <!-- Comparison Table -->
  {showComparison && comparisonTable.length > 0 && (
    <div class="mb-12 overflow-x-auto">
      <div class="inline-block min-w-full align-middle">
        <div class="overflow-hidden border border-gray-200 rounded-xl shadow-sm">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-4 text-left text-sm font-bold text-gray-700 uppercase tracking-wider">
                  Treatment
                </th>
                <th scope="col" class="px-6 py-4 text-left text-sm font-bold text-gray-700 uppercase tracking-wider">
                  Effectiveness
                </th>
                <th scope="col" class="px-6 py-4 text-left text-sm font-bold text-gray-700 uppercase tracking-wider">
                  Speed
                </th>
                <th scope="col" class="px-6 py-4 text-left text-sm font-bold text-gray-700 uppercase tracking-wider">
                  Cost
                </th>
                <th scope="col" class="px-6 py-4 text-left text-sm font-bold text-gray-700 uppercase tracking-wider">
                  Availability
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {comparisonTable.map((option, index) => (
                <tr class={index % 2 === 0 ? 'bg-white' : 'bg-gray-50'}>
                  <td class="px-6 py-4">
                    <div class="font-semibold text-gray-900">{option.name}</div>
                    <div class="text-sm text-gray-600 mt-1">{option.description}</div>
                  </td>
                  <td class="px-6 py-4 text-gray-700">{option.effectiveness || '—'}</td>
                  <td class="px-6 py-4 text-gray-700">{option.speed || '—'}</td>
                  <td class="px-6 py-4 text-gray-700 font-mono">{option.cost || '—'}</td>
                  <td class="px-6 py-4 text-gray-700">{option.availability || '—'}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  )}

  <!-- Top Service Cards -->
  {showServices && topServices.length > 0 && (
    <div>
      <h3 class="text-2xl font-bold text-gray-900 mb-6">
        Top Recommended Services
      </h3>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {topServices.map((service) => (
          <div class="bg-white border-2 border-gray-200 rounded-xl p-6 hover:border-brand-accent hover:shadow-lg transition-all relative">
            {service.badge && (
              <div class="absolute -top-3 left-6 bg-brand-accent text-white text-xs font-bold px-3 py-1 rounded-full">
                {service.badge}
              </div>
            )}

            <div class="flex items-start justify-between mb-4">
              <h4 class="text-xl font-bold text-gray-900">{service.name}</h4>
              <div class="flex items-center gap-1 bg-yellow-50 px-2 py-1 rounded">
                <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <span class="text-sm font-semibold text-gray-700">{service.rating}</span>
              </div>
            </div>

            <p class="text-sm text-gray-600 mb-4 italic">"{service.bestFor}"</p>

            <ul class="space-y-2 mb-6">
              {service.highlights.map((highlight) => (
                <li class="flex items-start gap-2 text-sm text-gray-700">
                  <svg class="w-4 h-4 text-medical-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span>{highlight}</span>
                </li>
              ))}
            </ul>

            <div class="flex items-center justify-between pt-4 border-t border-gray-200">
              <div>
                <span class="text-sm text-gray-500">Starting at</span>
                <div class="text-2xl font-bold text-gray-900 font-mono">{service.price}</div>
              </div>
              <a
                href={`/go/${service.affiliateId}`}
                class="bg-brand-accent text-white font-semibold px-5 py-2.5 rounded-lg hover:bg-blue-700 transition-colors"
              >
                Visit Site
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  )}
</section>

---
import { getCollection } from 'astro:content';

// Get all brands for recommendations
const allBrands = await getCollection('brands');
---

<!-- Hidden by default, shown via JavaScript when guided matching completes -->
<div id="personalized-results" class="hidden mt-12">
  <div class="bg-gradient-to-br from-brand-accent/5 via-white to-medical-blue-light rounded-3xl p-8 lg:p-12 border-2 border-brand-accent/20">

    <!-- Best For You Section -->
    <div id="best-match-section" class="mb-12">
      <div class="text-center mb-8">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-emerald-500 text-white text-sm font-semibold mb-4">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          Best Match For You
        </div>
        <h3 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-3">
          Here's What We Recommend
        </h3>
        <p id="recommendation-reasoning" class="text-lg text-slate-600 max-w-2xl mx-auto">
          <!-- Filled by JS based on user choices -->
        </p>
      </div>

      <div id="best-match-card" class="max-w-2xl mx-auto">
        <!-- Best match card will be inserted here -->
      </div>
    </div>

    <!-- Also Consider Section -->
    <div id="alternatives-section" class="mb-8">
      <h4 class="text-xl font-bold text-slate-900 mb-4 text-center">Also Consider</h4>
      <div id="alternatives-grid" class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        <!-- Alternative cards will be inserted here -->
      </div>
    </div>

    <!-- CTA Section -->
    <div class="text-center pt-8 border-t border-slate-200">
      <button
        id="restart-guide-btn"
        class="btn-ghost text-sm"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        Start Over
      </button>
      <p class="text-sm text-slate-500 mt-2">Or <a href="#categories" class="text-brand-accent hover:underline">browse all services</a></p>
    </div>
  </div>
</div>

<script define:vars={{ brands: allBrands.map(b => ({
  title: b.data.title,
  slug: b.slug,
  rating: b.data.rating,
  categories: b.data.categories,
  pricing: b.data.pricing,
  priorities: b.data.priorities || {},
  bestFor: b.data.bestFor || [],
  pros: b.data.pros,
  cons: b.data.cons,
  features: b.data.features,
})) }}>
  // Persona-based recommendation logic
  function getPersonalizedRecommendation(choices) {
    const { category, experience, concern } = choices;

    // Sexual Health - Novice Flow
    if (category === 'sexual-health' && experience === 'novice') {
      if (concern === 'privacy') {
        return {
          bestMatch: brands.find(b => b.slug === 'bluechew'),
          alternatives: [
            brands.find(b => b.slug === 'hims'),
            brands.find(b => b.slug === 'ro'),
          ],
          reasoning: "Based on your priority for maximum privacy and discretion",
          whyThisMatches: [
            "Ships in completely unmarked packaging",
            "Chewable format - no pill bottles to hide",
            "No in-person pharmacy visits required",
            "Billing shows up as generic company name"
          ],
          notIdealIf: [
            "You need brand-name medications only",
            "You're looking for the absolute lowest price",
          ]
        };
      } else if (concern === 'safety') {
        return {
          bestMatch: brands.find(b => b.slug === 'ro'),
          alternatives: [
            brands.find(b => b.slug === 'hims'),
          ],
          reasoning: "Based on your priority for safety and trust",
          whyThisMatches: [
            "Licensed physicians review every case",
            "Offers both generic and brand-name FDA-approved medications",
            "Transparent pricing with no hidden fees",
            "No auto-renewals - you control every order"
          ],
          notIdealIf: [
            "You need immediate same-day delivery",
            "You want the absolute cheapest option",
          ]
        };
      } else if (concern === 'ease') {
        return {
          bestMatch: brands.find(b => b.slug === 'hims'),
          alternatives: [
            brands.find(b => b.slug === 'ro'),
            brands.find(b => b.slug === 'bluechew'),
          ],
          reasoning: "Based on your priority for the easiest, most straightforward experience",
          whyThisMatches: [
            "Simple 5-minute online consultation",
            "Free two-day shipping on all orders",
            "Easy-to-use subscription management",
            "All-in-one platform - no external pharmacies"
          ],
          notIdealIf: [
            "You prefer one-time orders without subscriptions",
            "You want to pay per-use instead of monthly",
          ]
        };
      } else if (concern === 'cost') {
        return {
          bestMatch: brands.find(b => b.slug === 'hims'),
          alternatives: [
            brands.find(b => b.slug === 'bluechew'),
            brands.find(b => b.slug === 'ro'),
          ],
          reasoning: "Based on your priority for best value and affordability",
          whyThisMatches: [
            "Lowest generic ED medication prices ($4/dose)",
            "Free online consultation - no doctor fees",
            "Free shipping on all subscription orders",
            "Bulk pricing available for better savings"
          ],
          notIdealIf: [
            "You only need occasional doses (not full monthly supply)",
            "You prefer pharmacy pickup over mail delivery",
          ]
        };
      }
    }

    // Sexual Health - Comparison Flow
    if (category === 'sexual-health' && experience === 'comparison') {
      if (concern === 'price-high') {
        return {
          bestMatch: brands.find(b => b.slug === 'hims'),
          alternatives: [
            brands.find(b => b.slug === 'ro'),
          ],
          reasoning: "Based on your need for more affordable pricing",
          whyThisMatches: [
            "Starting at $4/dose - among the lowest in the industry",
            "No consultation fees or hidden charges",
            "Volume discounts available",
            "Free shipping on subscriptions"
          ],
          notIdealIf: [
            "You need complete flexibility in ordering timing",
            "You want to avoid subscriptions entirely",
          ]
        };
      } else if (concern === 'flexibility') {
        return {
          bestMatch: brands.find(b => b.slug === 'ro'),
          alternatives: [
            brands.find(b => b.slug === 'bluechew'),
          ],
          reasoning: "Based on your need for more control and flexibility",
          whyThisMatches: [
            "Order only when you need it - no forced subscriptions",
            "Skip, pause, or cancel anytime with no penalties",
            "Choose between generic and brand-name options",
            "Transparent per-dose pricing"
          ],
          notIdealIf: [
            "You want the absolute lowest prices (subscriptions are cheaper)",
            "You prefer automatic monthly deliveries",
          ]
        };
      } else if (concern === 'selection') {
        return {
          bestMatch: brands.find(b => b.slug === 'ro'),
          alternatives: [
            brands.find(b => b.slug === 'hims'),
          ],
          reasoning: "Based on your need for more treatment options",
          whyThisMatches: [
            "Widest range of ED medications available",
            "Both generic and brand-name options (Viagra, Cialis)",
            "Multiple dosage strengths to find your fit",
            "Also offers combination treatments"
          ],
          notIdealIf: [
            "You're happy with basic generic options",
            "You want the simplest experience with fewer choices",
          ]
        };
      } else if (concern === 'privacy-compare') {
        return {
          bestMatch: brands.find(b => b.slug === 'bluechew'),
          alternatives: [
            brands.find(b => b.slug === 'hims'),
          ],
          reasoning: "Based on your need for better privacy and discretion",
          whyThisMatches: [
            "Chewable tablets - no pill bottles",
            "Completely unmarked discreet packaging",
            "Generic billing descriptor",
            "No pharmacy interactions needed"
          ],
          notIdealIf: [
            "You prefer traditional pill format",
            "You need brand-name medications specifically",
          ]
        };
      }
    }

    // Sexual Health - Price Focus Flow
    if (category === 'sexual-health' && experience === 'price') {
      if (concern === 'occasional') {
        return {
          bestMatch: brands.find(b => b.slug === 'ro'),
          alternatives: [
            brands.find(b => b.slug === 'bluechew'),
          ],
          reasoning: "For occasional use, pay-per-dose is more economical than subscriptions",
          whyThisMatches: [
            "No subscription required - order only what you need",
            "Transparent per-dose pricing",
            "No monthly commitments or auto-renewals",
            "Skip months without penalties"
          ],
          notIdealIf: [
            "You use it multiple times per week (subscription would be cheaper)",
            "You want the absolute lowest per-dose cost",
          ]
        };
      } else if (concern === 'regular' || concern === 'daily') {
        return {
          bestMatch: brands.find(b => b.slug === 'hims'),
          alternatives: [
            brands.find(b => b.slug === 'bluechew'),
          ],
          reasoning: "For regular use, subscription pricing offers the best value",
          whyThisMatches: [
            "Lowest per-dose cost at $4/dose with subscription",
            "Free shipping on all subscription orders",
            "Volume discounts for larger quantities",
            "Consistent supply - never run out"
          ],
          notIdealIf: [
            "You prefer complete flexibility over savings",
            "You only need it occasionally",
          ]
        };
      }
    }

    // Hair Health Flow
    if (category === 'hair-health') {
      return {
        bestMatch: brands.find(b => b.slug === 'keeps'),
        alternatives: [
          brands.find(b => b.slug === 'hims'),
        ],
        reasoning: "Based on your interest in hair loss treatment",
        whyThisMatches: [
          "Specialist focus on hair loss only",
          "Most affordable finasteride and minoxidil",
          "Dermatologist consultations included",
          "50% off first 3 months for new customers"
        ],
        notIdealIf: [
          "You want multiple health services in one platform",
          "You need highly customized treatment combinations",
        ]
      };
    }

    // Default fallback
    return {
      bestMatch: brands.find(b => b.slug === 'hims'),
      alternatives: [
        brands.find(b => b.slug === 'ro'),
        brands.find(b => b.slug === 'bluechew'),
      ],
      reasoning: "Based on your selections, here's our recommendation",
      whyThisMatches: [
        "Comprehensive telehealth platform",
        "Competitive pricing and free consultations",
        "Wide range of treatment options",
        "Strong customer reviews and support"
      ],
      notIdealIf: [
        "You need specialized services beyond what's offered",
      ]
    };
  }

  // Render brand card
  function renderBrandCard(brand, isBest = false) {
    if (!brand) return '';

    const cardClass = isBest
      ? 'card p-8 bg-white border-2 border-emerald-500 shadow-lg'
      : 'card p-6 bg-white hover:shadow-md transition-shadow';

    return `
      <div class="${cardClass}">
        ${isBest ? '<div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-emerald-500 text-white text-xs font-semibold mb-4"><svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg> Our Top Pick For You</div>' : ''}

        <div class="flex items-start justify-between mb-4">
          <div class="flex-1">
            <h4 class="font-bold text-2xl text-slate-900 mb-2">${brand.title}</h4>
            <div class="flex items-center gap-2 mb-3">
              <div class="flex items-center gap-1">
                ${Array.from({ length: 5 }).map((_, i) => `
                  <svg class="w-5 h-5 ${i < Math.floor(brand.rating) ? 'text-amber-400' : 'text-slate-300'}" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                `).join('')}
              </div>
              <span class="text-sm font-medium text-slate-600">${brand.rating.toFixed(1)}</span>
            </div>
          </div>
        </div>

        <div class="mb-6">
          <div class="text-sm text-slate-500 mb-1">Starting from</div>
          <div class="text-3xl font-bold text-brand-accent mb-1">${brand.pricing.medicationFrom || brand.pricing.consultationFee}</div>
          <div class="text-sm text-slate-600">${brand.pricing.subscriptionType || ''}</div>
        </div>

        ${brand.bestFor && brand.bestFor.length > 0 ? `
          <div class="flex flex-wrap gap-2 mb-4">
            ${brand.bestFor.map(bf => `
              <span class="badge badge-${bf.variant || 'primary'} text-sm">
                ${bf.icon || ''} ${bf.label}
              </span>
            `).join('')}
          </div>
        ` : ''}

        <div class="flex flex-col gap-3 mb-6">
          <a href="/go/${brand.slug}" rel="nofollow sponsored" target="_blank" class="btn-primary text-center">
            Visit ${brand.title}
            <svg class="w-4 h-4 ml-2 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
          <a href="/${brand.slug}" class="btn-ghost text-center text-sm">
            Read Full Review
          </a>
        </div>
      </div>
    `;
  }

  // Show personalized results
  function showPersonalizedResults() {
    const choicesJson = sessionStorage.getItem('guidedChoices');
    if (!choicesJson) return;

    const choices = JSON.parse(choicesJson);
    const recommendation = getPersonalizedRecommendation(choices);

    const resultsSection = document.getElementById('personalized-results');
    const reasoningEl = document.getElementById('recommendation-reasoning');
    const bestMatchCard = document.getElementById('best-match-card');
    const alternativesGrid = document.getElementById('alternatives-grid');

    if (!resultsSection || !reasoningEl || !bestMatchCard || !alternativesGrid) return;

    // Set reasoning text
    reasoningEl.textContent = recommendation.reasoning;

    // Render best match
    bestMatchCard.innerHTML = `
      ${renderBrandCard(recommendation.bestMatch, true)}

      <div class="mt-6 grid md:grid-cols-2 gap-4">
        <div class="bg-emerald-50 rounded-xl p-6 border border-emerald-100">
          <h5 class="font-semibold text-slate-900 mb-3 flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Why This Matches
          </h5>
          <ul class="space-y-2">
            ${recommendation.whyThisMatches.map(reason => `
              <li class="flex items-start gap-2 text-sm text-slate-700">
                <span class="text-emerald-600 mt-0.5">•</span>
                <span>${reason}</span>
              </li>
            `).join('')}
          </ul>
        </div>

        <div class="bg-slate-50 rounded-xl p-6 border border-slate-200">
          <h5 class="font-semibold text-slate-900 mb-3 flex items-center gap-2">
            <svg class="w-5 h-5 text-slate-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
            Not Ideal If
          </h5>
          <ul class="space-y-2">
            ${recommendation.notIdealIf.map(reason => `
              <li class="flex items-start gap-2 text-sm text-slate-600">
                <span class="text-slate-400 mt-0.5">•</span>
                <span>${reason}</span>
              </li>
            `).join('')}
          </ul>
        </div>
      </div>
    `;

    // Render alternatives
    alternativesGrid.innerHTML = recommendation.alternatives
      .filter(brand => brand)
      .map(brand => renderBrandCard(brand, false))
      .join('');

    // Show results section
    resultsSection.classList.remove('hidden');

    // Smooth scroll
    setTimeout(() => {
      resultsSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }, 100);
  }

  // Listen for guided completion
  window.addEventListener('guided-complete', showPersonalizedResults);

  // Initialize if choices already exist (page refresh)
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      const existingChoices = sessionStorage.getItem('guidedChoices');
      if (existingChoices) {
        showPersonalizedResults();
      }
    });
  } else {
    const existingChoices = sessionStorage.getItem('guidedChoices');
    if (existingChoices) {
      showPersonalizedResults();
    }
  }

  // Restart guide handler
  document.getElementById('restart-guide-btn')?.addEventListener('click', () => {
    sessionStorage.removeItem('guidedChoices');
    document.getElementById('personalized-results')?.classList.add('hidden');

    // Scroll back to matcher
    document.getElementById('matcher')?.scrollIntoView({ behavior: 'smooth' });

    // Reset GuidedMatcher (trigger page reload for simplicity)
    window.location.reload();
  });
</script>

---
import DisclosureBanner from './DisclosureBanner.astro';
import MedicalDisclaimer from './MedicalDisclaimer.astro';

const currentYear = new Date().getFullYear();

const categories = [
  { title: 'Sexual Health', href: '/sexual-health' },
  { title: 'Hair Health', href: '/hair-health' },
  { title: 'Testosterone', href: '/testosterone' },
  { title: 'Weight Loss', href: '/weight-loss' },
];

const resources = [
  { title: 'All Guides', href: '/guides' },
  { title: 'Blog', href: '/blog' },
  { title: 'Methodology', href: '/methodology' },
  { title: 'About Us', href: '/about' },
];

const legal = [
  { title: 'Privacy Policy', href: '/privacy' },
  { title: 'Terms of Service', href: '/terms' },
  { title: 'Affiliate Disclosure', href: '/disclosure' },
  { title: 'Medical Disclaimer', href: '/disclaimer' },
];
---

<footer class="bg-slate-900 text-slate-300 border-t border-slate-800">
  <!-- Disclaimers Section -->
  <div class="bg-slate-800 border-b border-slate-700">
    <DisclosureBanner />
  </div>
  <div class="bg-slate-800">
    <MedicalDisclaimer variant="banner" />
  </div>

  <div class="container-custom py-12 lg:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Brand Column -->
      <div>
        <div class="flex items-center space-x-3 mb-4">
          <!-- SVG Icon -->
          <div class="w-11 h-11 flex-shrink-0 text-brand-accent">
            <svg viewBox="0 0 954.77 763.3" xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-full h-full">

---
import { getCollection, getEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import BreadcrumbSchema from '../components/BreadcrumbSchema.astro';
import Icon from '../components/Icon.astro';
import BestForBadge from '../components/BestForBadge.astro';
import BrandCard from '../components/BrandCard.astro';

interface Props {
  brand1Slug: string;
  brand2Slug: string;
  category: string;
  verdict?: {
    winner?: string;
    brand1BestFor: string;
    brand2BestFor: string;
  };
  comparisonTable?: Array<{
    feature: string;
    brand1Value: string;
    brand2Value: string;
    winner?: '1' | '2' | 'tie';
  }>;
}

const { brand1Slug, brand2Slug, category, verdict, comparisonTable } = Astro.props;

// Fetch brand data
const brand1Entry = await getEntry('brands', brand1Slug);
const brand2Entry = await getEntry('brands', brand2Slug);

if (!brand1Entry || !brand2Entry) {
  throw new Error(`Brand not found: ${!brand1Entry ? brand1Slug : brand2Slug}`);
}

const brand1 = brand1Entry.data;
const brand2 = brand2Entry.data;

// Build title and description
const title = `${brand1.title} vs ${brand2.title} 2025: Which Is Better?`;
const description = `Compare ${brand1.title} and ${brand2.title} for ${category}. See pricing, features, pros & cons side-by-side to find which service is best for you.`;

// Category name mapping
const categoryNames: Record<string, string> = {
  'sexual-health': 'ED Treatment',
  'hair-health': 'Hair Loss',
  'testosterone': 'Testosterone Therapy',
  'weight-loss': 'Weight Loss',
  'mental-health': 'Mental Health',
  'diagnostics': 'Lab Testing',
};

const categoryName = categoryNames[category] || category;

// Schema for comparison
const schema = {
  '@context': 'https://schema.org',
  '@type': 'MedicalWebPage',
  name: title,
  description: description,
};
---

<BaseLayout title={title} description={description} schema={schema}>
  <!-- Breadcrumb Schema -->
  <BreadcrumbSchema items={[
    { name: 'Home', url: '/' },
    { name: categoryName, url: `/${category}` },
    { name: 'Compare', url: `/compare` },
  ]} />

  <!-- Breadcrumb -->
  <section class="bg-white py-6 border-b border-slate-200">
    <div class="container-custom">
      <div class="flex items-center gap-2 text-sm text-slate-600 px-4">
        <a href="/" class="hover:text-brand-accent transition-colors">Home</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <a href={`/${category}`} class="hover:text-brand-accent transition-colors">{categoryName}</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-slate-900 font-medium">Compare</span>
      </div>
    </div>
  </section>

  <!-- Hero Section -->
  <section class="bg-white py-12 lg:py-16 border-b border-slate-200">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl lg:text-5xl font-bold text-slate-900 mb-4">
          {brand1.title} <span class="text-slate-400">vs</span> {brand2.title}
        </h1>
        <p class="text-xl text-slate-600 mb-8">
          Side-by-side comparison for {categoryName.toLowerCase()}
        </p>

        {verdict && (
          <div class="bg-slate-50 rounded-xl p-6 border border-slate-200">
            <div class="text-sm font-semibold text-slate-500 uppercase tracking-wide mb-4">
              The Bottom Line
            </div>
            <div class="grid md:grid-cols-2 gap-6">
              <div class="text-left">
                <div class="font-bold text-lg text-slate-900 mb-2">{brand1.title}</div>
                <p class="text-slate-600">{verdict.brand1BestFor}</p>
              </div>
              <div class="text-left">
                <div class="font-bold text-lg text-slate-900 mb-2">{brand2.title}</div>
                <p class="text-slate-600">{verdict.brand2BestFor}</p>
              </div>
            </div>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Quick Overview Cards -->
  <section class="section bg-white">
    <div class="container-custom">
      <h2 class="text-2xl font-bold text-slate-900 mb-6">Quick Overview</h2>
      <div class="grid lg:grid-cols-2 gap-6">
        <!-- Brand 1 Card -->
        <div class="card p-6">
          <div class="flex items-center gap-4 mb-4">
            <div class="flex-1">
              <h3 class="text-2xl font-bold text-slate-900">{brand1.title}</h3>
              <div class="flex items-center gap-2 mt-1">
                <div class="flex items-center">
                  {Array.from({ length: 5 }).map((_, i) => (
                    <svg
                      class={`w-4 h-4 ${i < Math.floor(brand1.rating) ? 'text-yellow-400' : 'text-slate-300'}`}
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>
                <span class="text-sm text-slate-600">{brand1.rating}/5</span>
              </div>
            </div>
          </div>

          <div class="space-y-3 mb-4">
            <div class="flex justify-between">
              <span class="text-slate-600">Consultation:</span>
              <span class="font-semibold text-slate-900">{brand1.pricing.consultationFee}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-slate-600">From:</span>
              <span class="font-semibold text-slate-900">{brand1.pricing.medicationFrom || brand1.pricing.consultationFee}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-slate-600">Subscription:</span>
              <span class="font-semibold text-slate-900">{brand1.pricing.subscriptionType}</span>
            </div>
          </div>

          {brand1.bestFor && brand1.bestFor.length > 0 && (
            <div class="mb-4">
              <div class="text-sm font-semibold text-slate-700 mb-2">Best For:</div>
              <div class="flex flex-wrap gap-2">
                {brand1.bestFor.slice(0, 3).map((item) => (
                  <BestForBadge
                    label={item.label}
                    variant={item.variant}
                    icon={item.icon}
                  />
                ))}
              </div>
            </div>
          )}

          <a
            href={brand1.affiliateLink}
            class="btn-primary w-full text-center block"
            rel="noopener noreferrer sponsored"
            data-affiliate-id={brand1.affiliateId}
          >
            Visit {brand1.title}
          </a>
        </div>

        <!-- Brand 2 Card -->
        <div class="card p-6">
          <div class="flex items-center gap-4 mb-4">
            <div class="flex-1">
              <h3 class="text-2xl font-bold text-slate-900">{brand2.title}</h3>
              <div class="flex items-center gap-2 mt-1">
                <div class="flex items-center">
                  {Array.from({ length: 5 }).map((_, i) => (
                    <svg
                      class={`w-4 h-4 ${i < Math.floor(brand2.rating) ? 'text-yellow-400' : 'text-slate-300'}`}
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>
                <span class="text-sm text-slate-600">{brand2.rating}/5</span>
              </div>
            </div>
          </div>

          <div class="space-y-3 mb-4">
            <div class="flex justify-between">
              <span class="text-slate-600">Consultation:</span>
              <span class="font-semibold text-slate-900">{brand2.pricing.consultationFee}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-slate-600">From:</span>
              <span class="font-semibold text-slate-900">{brand2.pricing.medicationFrom || brand2.pricing.consultationFee}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-slate-600">Subscription:</span>
              <span class="font-semibold text-slate-900">{brand2.pricing.subscriptionType}</span>
            </div>
          </div>

          {brand2.bestFor && brand2.bestFor.length > 0 && (
            <div class="mb-4">
              <div class="text-sm font-semibold text-slate-700 mb-2">Best For:</div>
              <div class="flex flex-wrap gap-2">
                {brand2.bestFor.slice(0, 3).map((item) => (
                  <BestForBadge
                    label={item.label}
                    variant={item.variant}
                    icon={item.icon}
                  />
                ))}
              </div>
            </div>
          )}

          <a
            href={brand2.affiliateLink}
            class="btn-primary w-full text-center block"
            rel="noopener noreferrer sponsored"
            data-affiliate-id={brand2.affiliateId}
          >
            Visit {brand2.title}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Comparison Table -->
  {comparisonTable && comparisonTable.length > 0 && (
    <section class="section-light">
      <div class="container-custom">
        <h2 class="text-3xl font-bold text-slate-900 mb-8 text-center">
          Feature Comparison
        </h2>

        <div class="max-w-4xl mx-auto bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
          <div class="overflow-x-auto">
            <table class="w-full min-w-[600px]">
              <thead class="bg-slate-50 border-b border-slate-200">
                <tr>
                  <th class="py-4 px-4 md:px-6 text-left text-sm font-semibold text-slate-900 whitespace-nowrap">Feature</th>
                  <th class="py-4 px-4 md:px-6 text-center text-sm font-semibold text-slate-900 whitespace-nowrap">{brand1.title}</th>
                  <th class="py-4 px-4 md:px-6 text-center text-sm font-semibold text-slate-900 whitespace-nowrap">{brand2.title}</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-slate-200">
                {comparisonTable.map((row) => (
                  <tr class="hover:bg-slate-50 transition-colors">
                    <td class="py-4 px-4 md:px-6 text-slate-900 font-medium">{row.feature}</td>
                    <td class={`py-4 px-4 md:px-6 text-center ${row.winner === '1' ? 'bg-emerald-50' : ''}`}>
                      <div class="flex items-center justify-center gap-2">
                        <span class="text-slate-700 text-sm md:text-base">{row.brand1Value}</span>
                        {row.winner === '1' && (
                          <svg class="w-4 h-4 md:w-5 md:h-5 text-emerald-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                          </svg>
                        )}
                      </div>
                    </td>
                    <td class={`py-4 px-4 md:px-6 text-center ${row.winner === '2' ? 'bg-emerald-50' : ''}`}>
                      <div class="flex items-center justify-center gap-2">
                        <span class="text-slate-700 text-sm md:text-base">{row.brand2Value}</span>
                        {row.winner === '2' && (
                          <svg class="w-4 h-4 md:w-5 md:h-5 text-emerald-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                          </svg>
                        )}
                      </div>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Pros & Cons -->
  <section class="section bg-white">
    <div class="container-custom">
      <h2 class="text-3xl font-bold text-slate-900 mb-8 text-center">
        Pros & Cons
      </h2>

      <div class="grid lg:grid-cols-2 gap-6 max-w-5xl mx-auto">
        <!-- Brand 1 -->
        <div class="card p-6">
          <h3 class="text-xl font-bold text-slate-900 mb-4">{brand1.title}</h3>

          <div class="mb-6">
            <div class="text-sm font-semibold text-emerald-700 mb-3 flex items-center gap-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Pros
            </div>
            <ul class="space-y-2">
              {brand1.pros.map((pro) => (
                <li class="text-slate-700 flex items-start gap-2">
                  <svg class="w-5 h-5 text-emerald-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span>{pro}</span>
                </li>
              ))}
            </ul>
          </div>

          <div>
            <div class="text-sm font-semibold text-red-700 mb-3 flex items-center gap-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
              Cons
            </div>
            <ul class="space-y-2">
              {brand1.cons.map((con) => (
                <li class="text-slate-700 flex items-start gap-2">
                  <svg class="w-5 h-5 text-red-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                  <span>{con}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>

        <!-- Brand 2 -->
        <div class="card p-6">
          <h3 class="text-xl font-bold text-slate-900 mb-4">{brand2.title}</h3>

          <div class="mb-6">
            <div class="text-sm font-semibold text-emerald-700 mb-3 flex items-center gap-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Pros
            </div>
            <ul class="space-y-2">
              {brand2.pros.map((pro) => (
                <li class="text-slate-700 flex items-start gap-2">
                  <svg class="w-5 h-5 text-emerald-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span>{pro}</span>
                </li>
              ))}
            </ul>
          </div>

          <div>
            <div class="text-sm font-semibold text-red-700 mb-3 flex items-center gap-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
              Cons
            </div>
            <ul class="space-y-2">
              {brand2.cons.map((con) => (
                <li class="text-slate-700 flex items-start gap-2">
                  <svg class="w-5 h-5 text-red-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                  <span>{con}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="section-light border-t border-slate-200">
    <div class="container-custom max-w-3xl text-center">
      <h2 class="text-3xl font-bold text-slate-900 mb-4">
        Ready to Get Started?
      </h2>
      <p class="text-lg text-slate-600 mb-8">
        Both services offer quality care. Choose the one that best fits your priorities.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={brand1.affiliateLink}
          class="btn-primary"
          rel="noopener noreferrer sponsored"
          data-affiliate-id={brand1.affiliateId}
        >
          Visit {brand1.title}
        </a>
        <a
          href={brand2.affiliateLink}
          class="btn-outline"
          rel="noopener noreferrer sponsored"
          data-affiliate-id={brand2.affiliateId}
        >
          Visit {brand2.title}
        </a>
      </div>
    </div>
  </section>

  <!-- Content Slot for Additional Content -->
  <slot />
</BaseLayout>
